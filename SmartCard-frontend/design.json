{
  "design_system": {
    "name": "Restaurant Dashboard UI",
    "style": {
      "theme": {
        "mode": "light",
        "primary_color": "#E52E2E",
        "secondary_color": "#F8F9FB",
        "accent_color": "#1E1E1E",
        "background_color": "#FFFFFF",
        "border_color": "#E0E0E0",
        "highlight_color": "#F5F5F5",
        "font_color_primary": "#1F1F1F",
        "font_color_secondary": "#6B6B6B",
        "success_color": "#28A745",
        "warning_color": "#FFC107",
        "error_color": "#DC3545",
        "info_color": "#17A2B8",
        "neutral_gray": "#A0A0A0"
      },
      "typography": {
        "font_family": "Inter, 'PingFang SC', 'Microsoft YaHei', sans-serif",
        "headline_size": "20px",
        "subheadline_size": "16px",
        "body_size": "14px",
        "small_size": "12px",
        "font_weight_regular": 400,
        "font_weight_medium": 500,
        "font_weight_bold": 600,
        "letter_spacing": "0.02em"
      },
      "layout": {
        "grid_system": "12-column responsive grid",
        "border_radius": "12px",
        "card_shadow": "0px 2px 6px rgba(0,0,0,0.06)",
        "section_spacing": "24px",
        "inner_padding": "16px",
        "sidebar_width": "220px",
        "navbar_height": "60px",
        "card_gap": "12px"
      },
      "interaction": {
        "hover_effect": "slight shadow increase",
        "button_hover_opacity": 0.9,
        "transition_duration": "0.2s ease-in-out",
        "focus_outline": "2px solid #E52E2E"
      }
    },
    "component_structure": {
      "layout": {
        "header": {
          "elements": ["logo", "search_bar", "notification_icon", "user_avatar"],
          "alignment": "horizontal, space-between",
          "background": "white",
          "shadow": true
        },
        "sidebar": {
          "sections": ["navigation_items", "active_highlight"],
          "width": "fixed",
          "background": "#F8F9FB",
          "active_item_color": "#E52E2E",
          "icon_style": "filled, 20px"
        },
        "main_content": {
          "cards": {
            "type": "summary_cards",
            "layout": "3-column responsive",
            "content_style": {
              "background": "white",
              "border_radius": "12px",
              "padding": "16px",
              "shadow": true,
              "headline_color": "#1F1F1F",
              "metric_color": "#E52E2E"
            }
          },
          "table": {
            "row_height": "48px",
            "header_style": {
              "font_weight": "bold",
              "background": "#F8F9FB"
            },
            "cell_style": {
              "padding": "12px 16px",
              "alignment": "left"
            },
            "icons": {
              "action_icon": "eye-outline",
              "icon_size": "18px"
            }
          }
        }
      },
      "interaction_feedback": {
        "active_state": {
          "sidebar_item": {
            "background": "#FFEAEA",
            "font_weight": "bold"
          }
        },
        "hover_state": {
          "button": {
            "shadow_intensity": "medium",
            "cursor": "pointer"
          }
        }
      }
    },
    "responsive_rules": {
      "mobile_breakpoint": "768px",
      "tablet_breakpoint": "1024px",
      "desktop_breakpoint": "1440px",
      "mobile": {
        "sidebar": "collapsible",
        "card_layout": "single_column"
      },
      "tablet": {
        "card_layout": "2-column"
      },
      "desktop": {
        "card_layout": "3-column"
      }
    },
    "ui_elements": {
      "button": {
        "variants": ["primary", "secondary", "ghost"],
        "radius": "8px",
        "padding": "8px 16px",
        "text_transform": "none"
      },
      "card": {
        "variants": ["summary", "data", "detail"],
        "shadow": true,
        "radius": "12px",
        "padding": "16px"
      },
      "iconography": {
        "style": "line, minimalist",
        "stroke_width": 1.8,
        "primary_color": "#6B6B6B"
      }
    }
  }
}
