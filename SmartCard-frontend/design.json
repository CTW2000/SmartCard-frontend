{
  "designSystem": {
    "name": "Minimal AI Chat Interface",
    "style": {
      "theme": "light",
      "layout": "dual-column with card-based modules",
      "alignment": "top-center main, right-side secondary",
      "spacing": {
        "padding": "24px",
        "margin": "16px",
        "gap": "20px"
      },
      "borderRadius": "20px",
      "colors": {
        "background": "#F5F7FA",
        "surface": "#FFFFFF",
        "primary": "#3C3C3C",
        "textPrimary": "#1A1A1A",
        "textSecondary": "#666666",
        "buttonBg": "#EDEDED",
        "buttonIconBg": "#3C3C3C",
        "buttonIconColor": "#FFFFFF",
        "cardShadow": "rgba(0, 0, 0, 0.05)"
      },
      "typography": {
        "fontFamily": "system-ui, sans-serif",
        "title": {
          "fontSize": "24px",
          "fontWeight": "600",
          "lineHeight": "1.4"
        },
        "body": {
          "fontSize": "14px",
          "fontWeight": "400"
        },
        "button": {
          "fontSize": "14px",
          "fontWeight": "500"
        },
        "caption": {
          "fontSize": "12px",
          "fontWeight": "400"
        }
      }
    },
    "structure": {
      "layout": {
        "type": "twoColumn",
        "mainArea": {
          "width": "70%",
          "content": [
            "greetingHeader",
            "chatInputCard"
          ]
        },
        "rightSidebar": {
          "width": "30%",
          "content": [
            "conversationHistoryList",
            "adSection"
          ]
        }
      }
    },
    "components": {
      "chatInputCard": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "20px",
        "padding": "20px",
        "boxShadow": "0px 2px 6px rgba(0,0,0,0.05)",
        "inputTextArea": {
          "minHeight": "100px",
          "fontSize": "14px",
          "resize": "none"
        },
        "button": {
          "style": "pill",
          "backgroundColor": "#EDEDED",
          "textColor": "#1C1C1C",
          "padding": "10px 20px",
          "borderRadius": "9999px"
        },
        "iconButton": {
          "shape": "circle",
          "backgroundColor": "#3C3C3C",
          "iconColor": "#FFFFFF",
          "size": "36px"
        }
      },
      "conversationHistoryItem": {
        "layout": "horizontal pill",
        "avatar": {
          "shape": "circle",
          "size": "36px"
        },
        "text": {
          "maxLines": 1,
          "overflow": "ellipsis"
        },
        "backgroundColor": "#D9D9D9",
        "borderRadius": "20px",
        "padding": "12px 16px"
      },
      "adSection": {
        "height": "160px",
        "borderRadius": "20px",
        "backgroundColor": "#D9D9D9",
        "textAlign": "center",
        "textStyle": "caption"
      }
    },
    "interactions": {
      "sendMessage": {
        "trigger": "click icon button",
        "effect": "submit chat input"
      },
      "hoverCard": {
        "boxShadow": "0px 2px 8px rgba(0,0,0,0.08)"
      },
      "scrollableHistory": true
    },
    "accessibility": {
      "focusStates": true,
      "keyboardNavigation": true,
      "screenReaderLabels": true
    }
  }
}
